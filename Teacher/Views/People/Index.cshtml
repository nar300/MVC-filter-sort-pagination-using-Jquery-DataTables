@model IEnumerable<Teacher.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped" id="mytable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>


    </thead>
</table>

<link src="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    
    <script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap4.min.js"></script>
    <script>


        $('#mytable').DataTable({

            ajax: {

                url: '/People/GetList',

                dataSrc: 'data'

            },

            columns: [
                { data:"Name"},
                { data:"Gender"},
                { data:"IsChecked"}

            ]

        });


    </script>
    }
